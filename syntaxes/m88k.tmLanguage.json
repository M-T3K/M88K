{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "m88k assembly",
	"scopeName": "source.ens",
	"patterns": [
		{
			"include": "#macros"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#storage"
		}
	],
	"repository": {
		"macros": {
			"patterns": [
				{
					"name": "keyword.operator.new",
					"match": "(END)?MACRO"
				}
			]
		},
		"strings": {
            "patterns": [
				{
					"name": "string.quoted.double",
					"match": "\".+?\""
				},
				{
					"name": "string.quoted.single",
					"match": "'.+?'"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment",
					"match": "((;|^\\*).*$)"	
				}
			]
		},
		"keywords": {
			"patterns": [
				{"include": "#operator"},
				{"include": "#control"}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\b-?[0-9.]+\b"
				},
				
				{
					"name": "variable.language",
					"match": "\br(00|0|01|1|02|2|03|3|29|30|31|)\b"
				}
			]
		},
		"storage": {
			"patterns": [
				{
					"name": "storage.type",
					"match": "\b0x[0-9A-F]+\b"
				},
				{
					"name": "storage.type",
					"match": "\br[0-9a-z]{1,2}\b" 
				}
			]
		},
		"operator": {
			"patterns": [
				{
					"name": "keyword.control",
					"match": "\\b(bb0|bb1|cmp|fcmp|br|bsr|jmp|jsr|org|data|res|stop|move|and|xor|or|mask|add|addu|sub|subu|muls|divs|mulu|divu|clr|set|ext|extu|mak|rot|fadd|fsub|fmul|fdiv|fcvt|flt|int|ld|ldcr|st|stcr|xmem|low|high)(.u|.d|.b|.bu|.h|.hu)?\\b"
				
				}
			]
		}
	}
}





